	<!-- News section -->
		<section class="main-news-wrap">
			<div class="s-container">
				<div class="section-title">
					<div class="row">
						<div class="col-lg-6 col-md-6 col-sm-6">
							<div class="text-left">
								<h1><%= @block.title %></h1>
							</div>
						</div>
						<div class="col-lg-6  col-md-6 col-sm-6 align-self-end">
							<div class="text-right">
								<a href="<% if params[:locale] == 'ru' %>/ru<% end %>/entities/news"><%= t('news_events') %></a>
							</div>
						</div>
					</div>
				</div>
				<div class="main-news-section">
					<div class="row">
                        <% Iteasykit::Entity.where(iteasykit_entity_type: 7).order('created_at desc').limit(3).each do |new| %>
						<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
							<div class="main-news-item">
								<div class="main-news-date"><span><%= I18n.localize(new.created_at, :format => :long) %></span></div>
								<div class="main-title"><h3><%= new.title %></h3></div>
								<div class="main-excerpt"><%= new.field(:shorttextnw) %></div>
								<div class="main-read-more"><a href="<%= easy_url(new) %>"><%= t('read_more') %> <span>&rsaquo;</span></a></div>
							</div>
						</div>
						<% end %>
					</div>
				</div>
			</div>
		</section>