
<div class="grey-container">
<!--breadcrumbs-->
<div class="s-container">
	<div class="row">
        <div class="col-md-12">
			<div class="breadcrumbs">
				<a href="/<% if params[:locale] == 'ru' %>ru<% end %>"><%= t('home_link') %></a> >
				 <a href="<% if params[:locale] == 'ru' %>/ru<% end %>/entities/about"><%= t('about_company') %></a> > <span><%= @entity.field(:title) %></span>
			</div>
		</div>
	</div>
</div>

<!-- Testemonials -->
<section class="testemonial-section">
	<div class="s-container">
		<div class="section-title">
			<div class="row">
				<div class="col-lg-6">
					<div class="text-left">
						<h1><%= @entity.field(:title) %></h1>
					</div>
				</div>

			</div>
		</div>


		<!--Tab 2-->
		<div id="tab-2" class="tab-content active-tab">
			<div class="row">
				<!--testemonial -->
				<% @entity.cells(13) do |cell| %>
				<div class="col-md-12">
					<div class="testemonial-wrap d-flex clearfix">
						<div class="testemonial-who">
							<div class="testemonial-com-img"><img src="<%= main_app.url_for(cell.field('photopl'))%>"></div>
							<div class="testemonial-com-link"><a href="<%= cell.field(:linkpl) %>" target="_blank"><%= cell.field(:linkpl) %></a></div>
							<div class="testemonial-com-name"><%= cell.field(:typepl) %></div>
						</div>
						<div class="testemonial-content">
							<div class="testemonial-date"><%= cell.field(:datapl) %></div>
							<div class="testemonial-excerpt">
								<%= cell.field(:textpl) %>
							</div>
							<% if cell.field(:ftextpl).present? %>
							<div class="testemonial-full inactive-full">
								<%= cell.field(:ftextpl) %>
							</div>
							<div class="testemonial-more"><svg xmlns="http://www.w3.org/2000/svg" width="15" height="6" viewBox="0 0 15.22 5.29" transform="rotate(90)">
								<path d="M.5 2.65h14.22m0 0L12.57.5m2.15 2.15l-2.15 2.14" fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round"/></svg>
							</div>
							<% end %>
							<div class="testemonial-com-source"><%= cell.field_name(:linkrevpl) %>: <a href="<%= cell.field(:linkrevpl) %>" target="_blank"><%= cell.field(:linkrevpl) %></a></div>
						</div>
					</div>
				</div>
				<% end %>

			</div>
		</div>

	</div>
</section>
<!--/#testemonial-container-->
</div>
<%= content_for :script_custom do %>
<script>
    jQuery(document).ready(function($){
        $(".testemonial-full:empty").next().addClass('empty');

        $('.testemonial-more').click(function(){
            $('.testemonial-full').removeClass('active-full').addClass('inactive-full');
            $(this).prev().removeClass('inactive-full').addClass('active-full');
            $('.testemonial-full.active-full').slideToggle();
            $('.testemonial-full.inactive-full').slideUp();

            $(this).toggleClass('roll-up');

        });

        $('.testemonial-more').click(function() {
            $('.testemonial-more').not(this).removeClass('roll-up');
        });

    });
</script>
<% end %>

