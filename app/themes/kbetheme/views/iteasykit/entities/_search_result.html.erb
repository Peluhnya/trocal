<!--breadcrumbs-->
<div class="s-container">
	<div class="row">
        <div class="col-md-12">
			<div class="breadcrumbs">
				<a href="/<% if params[:locale] == 'ru' %>ru<% end %>"><%= t('home_link') %></a> > <span><%= t('search') %></span>
			</div>
		</div>
	</div>
</div>

<section class="search-result-wrap">
	<div class="s-container">
		<div class="search-section-wrap">
			<div class="row">
				<div class="col-md-12">
					<div class="search-wrap">

						<%= search_form_for @global_search, url: '/entities/search_result', class: "page-search-form" do |f| %>

							<label>
								<span class="screen-reader-text"><%= t('site_search') %></span>
								<%= f.search_field :translations_value_cont, class: "page-search-field", placeholder: "#{I18n.t 'site_search'}" %>
								<%= f.submit "", class: "page-search-go", style: "background:url(/assets/img/search-icon.svg) no-repeat;" %>
							</label>
							<span><%= t('enter_text') %></span><br>
							<% if params[:q] %>
							<span><%= t('at_your_request') %> "<%= params[:q][:translations_value_cont]  %>" <%= t('was_found') %>  <%= @lists.count %> <%= t('results') %>.</span>
							<% end %>

						<% end %>
		            </div>
		        </div>
			</div>
		</div>

		<% @lists.each do |list| %>
			<% item = list.fieldable %>
			<% unless item.nil? %>
		<div class="search-item">
			<div class="row">
				<div class="col-md-4">
					<div class="search-title"><%= item.title %></div>
					<div class="search-link"><a href="<%= easy_url(item) %>"><%= root_url+easy_url(item) %></a></div>
				</div>
				<div class="col-md-6">
					<div class="search-description"><%= item.title %></div>
				</div>
				<div class="col-md-2 search-more-icon">
					<a class="arrow-go" href="#">
	                    <div class="arrow">
	                        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="6" viewBox="0 0 15.22 5.29"><path d="M.5 2.65h14.22m0 0L12.57.5m2.15 2.15l-2.15 2.14" fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round"></path></svg>
	                    </div>
                    </a>
				</div>
				<div class="search-more-text col-sm-12 d-md-none d-lg-none d-xs-flex d-sm-flex">
                    <a href="<%= easy_url(item) %>"><%= t('learn_more') %> </a>
                </div>
			</div>
		</div>
<% end %>
<% end %>

