	<div class="modal-wrap">
		<div class="close-btn"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 15.4 15.4"><g data-name="Слой 2"><path d="M.71.71l14 14m0-14l-14 14" fill="none" stroke="#000" stroke-miterlimit="10" stroke-width="2" data-name="Слой 1"/></g></svg></div>
		<div class="modal-title"><%= t('apply_for_job') %></div>
		<div class="vacancy-form">
			<form class="modal-form">
				<div class="form-row">
					<label><%= t('your_name') %></label>
					<input type="text" name="userName" id="vacancyName" placeholder="<%= t('enter_text') %>">
				</div>
				<div class="form-row">
					<label><%= t('Your_surname') %></label><br>
					<input type="text" name="userSurname" id="vacancySurname" placeholder="<%= t('enter_text') %>">
				</div>
				<div class="form-row">
					<label>Номер телефона</label><br>
					<input type="tel" name="userSurname" id="vacancyPhone" placeholder="+38 (___) ___ __ __">
				</div>
				<div class="form-row">
					<label>Ваш e-mail</label><br>
					<input type="email" name="userEmail" id="vacancyEmail" placeholder="example@gmail.com">
				</div>
				<div class="form-row">
					<label><%= t('attach_resume_file') %></label><br>
					<div class="input-file-container clearfix"> 
