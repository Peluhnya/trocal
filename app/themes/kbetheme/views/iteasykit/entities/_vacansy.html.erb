<div class="grey-container">
<!--breadcrumbs-->
<div class="s-container">
	<div class="row">
        <div class="col-md-12">
			<div class="breadcrumbs">
				<a href="/<% if params[:locale] == 'ru' %>ru<% end %>"><%= t('home_link') %></a> >
				<a href="<% if params[:locale] == 'ru' %>/ru<% end %>/entities/about"><%= t('about_company') %></a> > <span><%= @entity.field(:title) %></span>
			</div>
		</div>
	</div>
</div>

<!-- Vacancy -->
<section class="vacancy-section">
	<div class="s-container">
		<div class="bg-title" style="background-image: url(/assets/img/vacancy-bg.png);">
			<div class="row">
				<div class="col-lg-6 col-md-6">
					<div class="text-left">
						<h1><%= @entity.field(:title) %></h1>
						<div class="vacancy-count"><%= @entity.field(:body) %></div>
					</div>
				</div>
				<div class="col-lg-6 col-md-6 align-self-start">
					<div class="apply-btn-wrap">
						<div id="apply-btn" class="apply-btn"><%= @entity.field(:buttextv) %></div>
					</div>
				</div>
			</div>
		</div>

			<div class="row">
				<!--testemonial -->
				<% @entity.cells(11) do |cell| %>

				<div class="col-md-12">
					<div class="vacancy-wrap d-flex clearfix">
						<div class="vacancy-post"><%= cell.title %></div>
						<div class="vacancy-content">
							<div class="vacancy-excerpt">
								<div class="vacancy-desc-title"><%= cell.field_name(:shortvac) %>:</div>
								<div class="vacancy-text">
									<%= cell.field(:shortvac) %>
								</div>
							</div>
							<div class="vacancy-full inactive-full">
								<div class="vacancy-inner-title"><%= cell.field_name(:trebv) %>:</div>
								<div class="vacancy-text">
									<%= cell.field(:trebv) %>
								</div>
								<div class="vacancy-inner-title"><%= cell.field_name(:uslv) %>:</div>
								<div class="vacancy-text">
									<%= cell.field(:uslv) %>
								</div>
							</div>
							<div class="vacancy-more"><svg xmlns="http://www.w3.org/2000/svg" width="15" height="6" viewBox="0 0 15.22 5.29" transform="rotate(90)"><path d="M.5 2.65h14.22m0 0L12.57.5m2.15 2.15l-2.15 2.14" fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round"/></svg></div>
						</div>
					</div>
				</div>

				<% end %>
			</div><!--/.row-->
	</div>
</section>
<!--/#grey-container-->

