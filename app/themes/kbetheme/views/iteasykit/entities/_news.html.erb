<!--breadcrumbs-->
<div class="s-container">
  <div class="row">
    <div class="col-md-12">
      <div class="breadcrumbs">
        <a href="/<% if params[:locale] == 'ru' %>ru<% end %>"><%= t('home_link') %></a> > <a href="<% if params[:locale] == 'ru' %>/ru<% end %>/entities/news"><%= t('news') %></a> > <% @entity.rel_taxonomies.each do |rel| %><% tax = rel.iteasykit_taxonomy %>
        <a href="<%= easy_url(tax) %>"><%= tax.title %></a> > <% end %><span> <%= @entity.title %></span>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid news-page">
  <div class="w-container">
    <div class="row clearfix">
      <div class="news-back-col">
        <a href="<% if params[:locale] == 'ru' %>/ru<% end %>/category_news/news-event">
        <div class="back d-none d-md-flex">
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path d="M22 12l-4-4v3H3v2h15v3z" />
                            <path d="M0 0h24v24H0z" fill="none" />
                        </svg>
                    </span>
          <span>Назад</span>
        </div></a>
      </div><!--/.news-back-col-->
      <div class="news-content-col">
        <div class="news">

          <h1 class="title"> <%= @entity.title %></h1>

          <%= @entity.field(:bodynw) %>

        </div>
        <% @seti= Iteasykit::Entity.find(18) %>
        <div class="social-subscribe">
          <h1 class="subscribe-title"><%= t('subscribe_on_social') %></h1>
          <ul class="social-sub-list">
            <li class="social-sub-item" id="facebook">
              <a href="<%= @seti.field(:facebook18) %>" title="Facebook" target="_blank">
                <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 96.124 96.123">
                  <path d="M72.089.02L59.624 0C45.62 0 36.57 9.285 36.57 23.656v10.907H24.037a1.96 1.96 0 0 0-1.96 1.961v15.803a1.96 1.96 0 0 0 1.96 1.96H36.57v39.876a1.96 1.96 0 0 0 1.96 1.96h16.352a1.96 1.96 0 0 0 1.96-1.96V54.287h14.654a1.96 1.96 0 0 0 1.96-1.96l.006-15.803a1.963 1.963 0 0 0-1.961-1.961H56.842v-9.246c0-4.444 1.059-6.7 6.848-6.7l8.397-.003a1.96 1.96 0 0 0 1.959-1.96V1.98A1.96 1.96 0 0 0 72.089.02z"
                        fill="#FFF" fill-opacity="1"></path>
                </svg> Facebook</a>
            </li>
            <li class="social-sub-item" id="youtube">
              <a href="<%= @seti.field(:youtube18) %>" title="YouTube" target="_blank">
                <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 96.875 96.875">
                  <path d="M95.201 25.538c-1.186-5.152-5.4-8.953-10.473-9.52-12.013-1.341-24.172-1.348-36.275-1.341-12.105-.007-24.266 0-36.279 1.341-5.07.567-9.281 4.368-10.467 9.52C.019 32.875 0 40.884 0 48.438 0 55.992 0 64 1.688 71.336c1.184 5.151 5.396 8.952 10.469 9.52 12.012 1.342 24.172 1.349 36.277 1.342 12.107.007 24.264 0 36.275-1.342 5.07-.567 9.285-4.368 10.471-9.52 1.689-7.337 1.695-15.345 1.695-22.898 0-7.554.014-15.563-1.674-22.9zM35.936 63.474V31.437a497491.15 497491.15 0 0 0 30.798 16.068c-10.3 5.342-20.504 10.631-30.798 15.969z"
