<section class="error-section">
	<div class="f-container">
		<div class="row">
			<div class="col-md-6 full-height-section white-section">
        <%= image_tag main_app.url_for(@entity.field(:image404)) %>
			</div>
			<div class="col-md-6 full-height-section red-section">
				<div class="row">
					<div class="col-md-10">
						<div class="error-title"><%= @entity.field(:title) %></div>
						<div class="error-subtitle"><%= @entity.field(:body) %></div>
						<div class="black-btn"><a href="/"><%= t('go_home') %></a></div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

</div><!-- /#page -->

